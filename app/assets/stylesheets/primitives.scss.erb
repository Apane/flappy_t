
/* For modern browsers */
.clearfix:before,
.clearfix:after
{
  content:"";
  display:table;
}
.clearfix:after
{
    clear:both;
}
/* For IE 6/7 (trigger hasLayout) */
.clearfix {
    zoom:1;
}

 code
 {
  border: 1px solid #CCC;
  padding: 1px;
  vertical-align: middle;
  font-family: "Consolas", "Inconsolata", "Meslo", "Inconsolata-dz", monospace;
